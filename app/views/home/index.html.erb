      <%= link_to "Get Started", create_account_path, class: "ui button huge centered primary nudge-down home-btn" %>
      <%= link_to login_path, class: "ui facebook huge button nudge-down home-btn" do %>
        <i class="facebook icon"></i> Login with Facebook
      <% end %>
