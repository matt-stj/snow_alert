<div class="ui large top fixed inverted menu">
    <div class="ui container">
    <a href='/' class="item">
      <i class="circular inverted cloud green icon"></i>
      SnowAlert
    </a>
    <div class="ui search right">
      <%= form_tag(search_path, :method => "get", id: "seach-form") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Search for a Mountain" %>
         <% end %>
    </div>
    <% if current_user %>
      <div class="ui inverted right floated item dropdown">
        <span><%= current_user.name %></span>
        <img class="ui avatar image tap-right" src="<%= current_user.image_url %>">
        <i class="dropdown icon"></i>
        <div class="ui inverted menu">

              <%= link_to "Dashboard", user_path(current_user), class: "link item" %>

              <%= link_to "Account Preferences", edit_user_path(current_user), class: "link item" %>

              <%= link_to "Log out", logout_path, method: :delete, class: "link item" %>

        </div>
      </div>
    <% else %>
      <%= link_to "Login", login_path, class: "item right floated" %>
    <% end %>
  </div>
</div>
