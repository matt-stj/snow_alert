
<div class="ui container resorts">
<h3 class="ui horizontal divider header">
    Featured Areas
</h3>
  </div>
</div>

<div class="feature alternate ui stripe vertical segment">
  <div class="ui three column center aligned divided relaxed stackable grid container">
    <div class="row">
      <div class="column">
        <h2 class="ui icon header">
          <%= image_tag("vail-logo.png", class: "ui resort-logo icon")  %>
          Vail
        </h2><br>
        <%= link_to "View Forecast", mountain_path(Mountain.find_by_name("Vail")), class: "ui large button primary" if current_user %>
      </div>
      <div class="column">
        <h2 class="ui icon header">
          <%= image_tag("wp-logo.png", class: "ui resort-logo icon")  %>
          Winter Park
        </h2><br>
        <%= link_to "View Forecast", mountain_path(Mountain.find_by_name("Winter Park")), class: "ui large button green" if current_user %>
      </div>
      <div class="column">
        <h2 class="ui icon header">
          <%= image_tag("northstar-logo.png", class: "ui resort-logo icon") %>
          Northstar
        </h2><br>
        <%= link_to "View Forecast", mountain_path(Mountain.find_by_name("Northstar")), class: "ui large button primary" if current_user %>
      </div>
    </div>

      <% if !current_user %>
        <%= link_to login_path, class: "ui facebook button nudge-down" do %>
          <i class="facebook icon"></i> Login with Facebook to view featured areas
        <% end %>
      <% end %>
  </div>
</div>
