<div class="twelve wide column">
  <table class="ui celled table centered center aligned">
<thead>
<tr>
  <th>Location</th>
  <th style="width: 200px;">Remove from favorites</th>
</tr>
</thead>
<tbody>
<% current_user.favorites.each do |favorite| %>
<tr>
  <td><%= link_to favorite.mountain.name, mountain_path(favorite.mountain) %></td>
  <td>
    <% if current_user.favorited?(favorite.mountain.id) %>
       <%= link_to user_path(current_user, :favorite_action => { :remove => favorite.mountain.id }), method: :patch, class: "remove" do %>
      <i class="remove circle icon large red"></i>
      <% end %>
    <% else %>
    <%= link_to "Add Favorite", user_path(current_user, :favorite_action => { :add => mountain.id }), method: :patch %>
      <i class="check circle icon">Add Favorite</i>
    <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>
</div>
